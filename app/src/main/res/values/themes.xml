<resources>
    <!-- Base application theme. -->
    <style name="Theme.Deezaya" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deezer_teal</item>
        <item name="colorPrimaryVariant">@color/deezer_teal_variant</item>
        <item name="colorOnPrimary">@color/deezer_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deezer_green</item>
        <item name="colorSecondaryVariant">@color/deezer_green_variant</item>
        <item name="colorOnSecondary">@color/deezer_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>